TM_GIT         = "/usr/local/bin/git"

# show the path to the current tab's file in the window title
windowTitle    = "$TM_DISPLAYNAME${TM_DIRECTORY/\A(?:\/Users\/blahed\w+\/?(.*)|(.+))\z/${2:? – ${2/\A\/Users\/blahed/~/}:${1/\A(?=.)/ – /}}/}"

# Style
fontName       = "Monaco"
fontSize       = 11
tabSize        = 2
softTabs       = true
wrapColumn     = "Use Window Frame"
softWrap       = false
showInvisibles = false

# Includes
mExtraIncludes = ".htaccess,.gitignore"
fileBrowserGlob  = "{*,$mExtraIncludes}"
include = "{$include,$mExtraIncludes}"

# Excludes
mExtraExcludes = "build,dist,log,vendor,node_modules,tmp"
excludeInFileChooser  = "{$excludeInFileChooser,$mExtraExcludes}"
excludeInFolderSearch = "{$excludeInFolderSearch,$mExtraExcludes}"
excludeDirectories = "$mExtraExcludes"
excludeFiles   = "*.{so,pyc,o,scssc}"

## File type specific configuration

[ *.{icns,ico,jpg,jpeg,m4v,nib,pdf,png,psd,pyc,rtf,tif,tiff,xib} ]
binary           = true

[ source ]
softTabs         = true
tabSize          = 2

[ source.python ]
softTabs         = true
tabSize          = 4

[ "{README,INSTALL,LICENSE,TODO}" ]
fileType         = "text.plain"

[ *.{txt,md,mdown,markdown} ]
spellChecking  = true
tabSize        = 4
